# Secure Tenant Application Template - Environment Configuration

# Application Configuration
APP_NAME="My Secure Tenant App"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8003

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=my_tenant_db
DB_USERNAME=sso_user
DB_PASSWORD=sso_password

# Central SSO Configuration
CENTRAL_SSO_URL=http://localhost:8000
CENTRAL_SSO_DOMAIN=localhost:8000
TENANT_SLUG=my-tenant

# ðŸ”‘ Security Configuration
# Get these from your central SSO administrator
TENANT_API_KEY=
HMAC_SECRET=
SSL_ENABLED=false
SSL_VERIFY=false

# JWT Configuration
JWT_SECRET=
JWT_TTL=60

# Session Security
SESSION_DOMAIN=localhost
SANCTUM_STATEFUL_DOMAINS=localhost:8003,localhost:8000
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# Cache & Performance
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Redis (optional, recommended for production)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Security Settings
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW=60
AUDIT_ENABLED=true
AUDIT_LOG_FAILED=true
AUDIT_LOG_SUCCESS=true
SSO_TIMEOUT=30
SSO_RETRY_ATTEMPTS=3

# Production Settings (update for production)
# SSL_ENABLED=true
# SSL_VERIFY=true
# SESSION_SECURE_COOKIE=true
# APP_DEBUG=false
# CACHE_DRIVER=redis
# SESSION_DRIVER=redis
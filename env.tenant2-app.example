# =============================================================================
# Tenant 2 Application Environment Configuration - EXAMPLE
# =============================================================================
# Copy this file to .env.tenant2-app and customize the values below
# Generate keys with: php artisan key:generate --show

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Tenant 2 Application"
APP_ENV=local
APP_KEY=                                                    # Generate with: php artisan key:generate --show
APP_DEBUG=true
APP_URL=http://localhost:8002
LOG_LEVEL=debug
BCRYPT_ROUNDS=12

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=mariadb
DB_PORT=3306
DB_DATABASE=tenant2_db
DB_USERNAME=sso_user
DB_PASSWORD=change_this_password                            # Use secure password

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=localhost
SESSION_SECURE_COOKIE=false                                # Set to true for HTTPS
SESSION_SAME_SITE=lax
SESSION_COOKIE=tenant2_session

# =============================================================================
# HTTPS AND SSL CONFIGURATION
# =============================================================================
TRUSTED_PROXIES=*                                          # Use specific IPs in production

# =============================================================================
# SSO INTEGRATION CONFIGURATION
# =============================================================================
CENTRAL_SSO_URL=http://localhost:8000                      # External URL for redirects
CENTRAL_SSO_API=http://central-sso:8000/api                # Internal Docker network URL
TENANT_SLUG=tenant2                                        # Must match tenant slug in central SSO

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
TENANT2_API_KEY=tenant2_your_32_character_api_key_here      # Get from central SSO admin
HMAC_SECRET=your_64_character_hmac_secret_here              # Must match central SSO HMAC_SECRET
HMAC_ALGORITHM=sha256

# =============================================================================
# CACHE AND QUEUE CONFIGURATION
# =============================================================================
CACHE_STORE=database
QUEUE_CONNECTION=database
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=log                                            # Use smtp for production
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"                      # Change to your domain
MAIL_FROM_NAME="Tenant 2 Application"

# =============================================================================
# LARAVEL FRAMEWORK SETTINGS
# =============================================================================
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
TELESCOPE_ENABLED=true                                     # Set to false for production
TELESCOPE_PATH=telescope

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# AWS CONFIGURATION (Optional)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# VITE CONFIGURATION
# =============================================================================
VITE_APP_NAME="Tenant 2 Application"

# =============================================================================
# MEMCACHED CONFIGURATION
# =============================================================================
MEMCACHED_HOST=127.0.0.1